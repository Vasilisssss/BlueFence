<!-- Save to fillable PDF with signature field -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script>
  const { jsPDF } = window.jspdf;

  async function saveFillablePDF() {
    const doc = new jsPDF({ unit: 'pt', format: 'a4' });
    doc.initForm();

    // Header
    doc.setFontSize(16);
    doc.text("Bluebird Fence Quote", 40, 50);

    // Customer Info fields
    const infoFields = [
      { label: "First Name", id: "FirstName" },
      { label: "Last Name", id: "LastName" },
      { label: "Street", id: "Street" },
      { label: "State", id: "State" },
      { label: "Zip Code", id: "ZipCode" },
      { label: "Email", id: "Email" },
      { label: "Phone", id: "Phone" },
      { label: "Job Address", id: "job-address" },
      { label: "Site Contact", id: "site-contact" },
      { label: "Estimate Attendance", id: "estimate-attendance" }
    ];

    let y = 80;
    doc.setFontSize(10);
    infoFields.forEach(f => {
      const val = document.getElementById(f.id)?.value || "";
      doc.text(`${f.label}:`, 40, y + 5);
      doc.textField(f.id, 140, y - 5, 220, 16, {
        value: val,
        fontSize: 10,
        borderColor: [0, 0, 0],
        textColor: [0, 0, 0]
      });
      y += 20;
    });

    // Grand Total
    const total = document.getElementById('grand-total-box')?.textContent || "$0.00";
    doc.setFontSize(12);
    doc.text("Total Amount:", 40, y + 10);
    doc.text(total, 140, y + 10);
    y += 40;

    // Summary table (grouped products)
    const productMap = new Map();
    document.querySelectorAll('.product-type-wrapper').forEach(card => {
      const materialSelect = card.querySelector('.fence-material-select');
      const styleSelect = card.querySelector('.fence-style-select');
      const selects = card.querySelectorAll('select');
      const heightSelect = selects[1];
      const linearFootageInput = card.querySelector('input[placeholder="Write Here"]');
      const cardTotal = card.querySelector('.card-total');
      if (materialSelect && styleSelect && heightSelect) {
        const material = materialSelect.value !== '0' ? materialSelect.value : '';
        const style = styleSelect.value !== '0' ? styleSelect.options[styleSelect.selectedIndex].text : '';
        const height = heightSelect.value !== '0' ? heightSelect.options[heightSelect.selectedIndex].text : '';
        const linearFootage = linearFootageInput ? linearFootageInput.value : '';
        const unitPrice = cardTotal ? parseFloat(cardTotal.textContent.replace(/\$|,/g, '')) : 0;
        const key = `${material}-${style}-${height}-${linearFootage}`;
        if (productMap.has(key)) {
          const existing = productMap.get(key);
          existing.quantity += 1;
          existing.totalAmount = existing.unitPrice * existing.quantity;
        } else {
          productMap.set(key, {
            material: material ? material.charAt(0).toUpperCase() + material.slice(1) : '',
            style: style,
            height: height,
            linearFootage: linearFootage,
            unitPrice: unitPrice,
            quantity: 1,
            totalAmount: unitPrice
          });
        }
      }
    });

    // Table header
    doc.setFontSize(11);
    doc.text("Quote Summary:", 40, y);
    y += 10;

    // Build table manually (fallback if autoTable not included)
    const headers = ["QTY", "MATERIAL", "STYLE", "HEIGHT", "LINEAR FT", "UNIT PRICE", "AMOUNT"];
    const startX = 40;
    const colWidths = [30, 80, 80, 60, 60, 70, 70];
    let rowY = y + 10;

    // Header row
    let x = startX;
    doc.setFont(undefined, 'bold');
    headers.forEach((h, i) => {
      doc.text(h, x + 2, rowY);
      x += colWidths[i];
    });
    doc.setFont(undefined, 'normal');
    rowY += 18;

    // Data rows
    let grandTotal = 0;
    productMap.forEach(p => {
      x = startX;
      const cols = [
        String(p.quantity),
        p.material,
        p.style,
        p.height,
        p.linearFootage,
        `$${p.unitPrice.toFixed(2)}`,
        `$${p.totalAmount.toFixed(2)}`
      ];
      cols.forEach((c, i) => {
        doc.text(c, x + 2, rowY);
        x += colWidths[i];
      });
      grandTotal += p.totalAmount;
      rowY += 16;
      if (rowY > 760) { // new page if overflow
        doc.addPage();
        rowY = 60;
      }
    });

    // Total
    doc.setFont(undefined, 'bold');
    doc.text("TOTAL:", startX, rowY + 5);
    doc.text(`$${grandTotal.toFixed(2)}`, startX + colWidths.slice(0,6).reduce((a,b)=>a+b,0) + 2, rowY + 5);
    doc.setFont(undefined, 'normal');

    // Signature field
    const sigY = 780;
    doc.text("Client Signature:", 40, sigY + 5);
    doc.signatureField("signature", 160, sigY - 5, 280, 60, {
      borderColor: [0,0,0],
      backgroundColor: [255,255,255]
    });

    doc.finalizeForm();
    doc.save("BluebirdFenceQuote.pdf");
  }

  // Insert the Save button
  const saveBtn = document.createElement('button');
  saveBtn.textContent = "Save to PDF";
  saveBtn.style = "position:fixed;bottom:20px;left:30px;z-index:1000;padding:12px 20px;background:#1e88e5;color:#fff;border:none;border-radius:8px;cursor:pointer;font-weight:600;";
  saveBtn.onclick = saveFillablePDF;
  document.body.appendChild(saveBtn);
</script>

</body>
</html>
