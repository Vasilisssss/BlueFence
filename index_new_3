  <script>
    function formatCurrency(value) {
        return value.toLocaleString('en-US', { style: 'currency', currency: 'USD' });
    }

    function updateGrandTotal() {
      const allTotals = document.querySelectorAll('.card-total');
      let grandTotal = 0;
      allTotals.forEach(box => {
        const value = parseFloat(box.textContent.replace(/[^\d.-]/g, ''));
        if (!isNaN(value)) {
          grandTotal += value;
        }
      });
      const grandTotalBox = document.getElementById('grand-total-box');
      if(grandTotalBox) {
        grandTotalBox.textContent = formatCurrency(grandTotal);
      }
    }

    // Fence style options by material
    const FENCE_STYLE_OPTIONS = {
      wood: [
        { value: 'lattice', label: 'Lattice' },
        { value: 'closed-top-baluster', label: 'Closed Top Baluster' },
        { value: 'privacy-lattice', label: 'Privacy & Lattice' },
        { value: 'universal-privacy', label: 'Universal Privacy' },
        { value: 'traditional-scalloped', label: 'Traditional Scalloped' },
        { value: 'tongue-groove', label: 'Tongue & Groove' },
        { value: 'stockade', label: 'Stockade' },
        { value: 'horizontal-boards', label: 'Horizontal Boards' },
        { value: 'open-top-baluster', label: 'Open top Baluster' }
      ],
      vinyl: [
        { value: 'solid-privacy', label: 'Solid Privacy' },
        { value: 'privacy-baluster', label: 'Privacy & Baluster' },
        { value: 'privacy-lattice', label: 'Privacy & Lattice' },
        { value: 'scalloped-baluster', label: 'Scalloped Baluster' },
        { value: 'closed-top-baluster', label: 'Closed Top Baluster & Arbor' },
        { value: 'lattice', label: 'Lattice' },
        { value: 'semi-privacy', label: 'Semi Privacy' },
        { value: 'pergola', label: 'Pergola' },
        { value: 'straight-top-baluster-arbor', label: 'Straight Top Baluster' },
        {value: 'privacy-mini-lattice', label: 'Privacy & Mini Latice'}
      ]
    };

    const PRICING = {
      materials: {
        wood: 44,
        vinyl: 45
      },
      heights: {
        '6H': 15,
        '4H': 10
      },
      styles: {
        'wood-lattice': 30,
        'wood-closed-top-baluster': 35,
        'wood-privacy-lattice': 50,
        'wood-universal-privacy': 55,
        'wood-traditional-scalloped': 40,
        'wood-tongue-groove': 25,
        'wood-stockade': 20,
        'wood-horizontal-boards': 30,
        'wood-open-top-baluster': 35,
        'vinyl-solid-privacy': 40,
        'vinyl-privacy-baluster': 50,
        'vinyl-privacy-lattice': 55,
        'vinyl-scalloped-baluster': 45,
        'vinyl-closed-top-baluster': 35,
        'vinyl-lattice': 30,
        'vinyl-semi-privacy': 25,
        'vinyl-pergola': 60,
        'vinyl-straight-top-baluster-arbor': 40,
        'vinyl-privacy-mini-lattice': 45
      }
    };

    function updateFenceStyleOptions(materialSelect, styleSelect) {
      const material = materialSelect.value;
      styleSelect.innerHTML = '<option value="0">Please Select</option>';
      if (FENCE_STYLE_OPTIONS[material]) {
        FENCE_STYLE_OPTIONS[material].forEach(opt => {
          const option = document.createElement('option');
          option.value = opt.value;
          option.textContent = opt.label;
          styleSelect.appendChild(option);
        });
      }
    }

    function getFenceImageSrc(material, style) {
      if (!material || !style || material === '0' || style === '0') return '';
      const imagePath = `images/${material}-${style}.png`;
      return imagePath;
    }

    function calculateCardPrice(material, height, style) {
      let total = 0;
      if (material && material !== '0' && PRICING.materials[material]) {
        total += PRICING.materials[material];
      }
      if (height && height !== '0' && PRICING.heights[height]) {
        total += PRICING.heights[height];
      }
      if (material && style && material !== '0' && style !== '0') {
        const styleKey = `${material}-${style}`;
        if (PRICING.styles[styleKey]) {
          total += PRICING.styles[styleKey];
        }
      }
      return total;
    }

    function bindCardLogic(wrapper) {
        const selects = wrapper.querySelectorAll('select');
        const cardTotalEl = wrapper.querySelector('.card-total');
        const deleteBtn = wrapper.querySelector('.delete-btn');
        const resizePlusBtn = wrapper.querySelector('.resize-plus');
        const resizeMinusBtn = wrapper.querySelector('.resize-minus');
        const materialSelect = wrapper.querySelector('.fence-material-select');
        const styleSelect = wrapper.querySelector('.fence-style-select');
        const heightSelect = wrapper.querySelector('select:not(.fence-material-select):not(.fence-style-select)');
        const imageEl = wrapper.querySelector('.fence-preview-image');

        function updateCardPrice() {
            const material = materialSelect ? materialSelect.value : '0';
            const height = heightSelect ? heightSelect.value : '0';
            const style = styleSelect ? styleSelect.value : '0';
            const currentPrice = calculateCardPrice(material, height, style);
            cardTotalEl.textContent = formatCurrency(currentPrice);
            updateGrandTotal();
            updateSecondPageSummary();
        }

        selects.forEach(select => {
            select.addEventListener('change', updateCardPrice);
        });

        if (materialSelect && styleSelect) {
          materialSelect.addEventListener('change', function() {
            updateFenceStyleOptions(materialSelect, styleSelect);
            styleSelect.value = '0';
            updateCardPrice();
            updateFenceImage();
            updateSecondPageSummary();
          });
          styleSelect.addEventListener('change', function() {
            updateCardPrice();
            updateFenceImage();
            updateSecondPageSummary();
          });
        }

        const linearFootageInput = wrapper.querySelector('input[placeholder="Write Here"]');

        if (heightSelect) {
          heightSelect.addEventListener('change', function() {
            updateSecondPageSummary();
          });
        }

        if (linearFootageInput) {
          linearFootageInput.addEventListener('input', function() {
            updateSecondPageSummary();
            generateFenceImages();
          });
        }

        const allSelects = wrapper.querySelectorAll('select');
        allSelects.forEach(select => {
          select.addEventListener('change', function() {
            setTimeout(() => {
              updateSecondPageSummary();
            }, 100);
          });
        });

        function updateFenceImage() {
          if (!imageEl) return;
          const mat = materialSelect ? materialSelect.value : '';
          const sty = styleSelect ? styleSelect.value : '';
          const src = getFenceImageSrc(mat, sty);
          if (src && mat !== '0' && sty !== '0') {
            imageEl.src = src;
            imageEl.style.display = '';
          } else {
            imageEl.src = '';
            imageEl.style.display = 'none';
          }
          generateFenceImages();
        }

        if (deleteBtn) {
            deleteBtn.addEventListener('click', () => {
                wrapper.remove();
                updateGrandTotal();
                adjustDrawingSize();
                generateFenceImages();
                updateSecondPageSummary();
            });
        }
        if (resizePlusBtn && resizeMinusBtn) {
            const container = wrapper.querySelector('.product-type-container');
            resizePlusBtn.addEventListener('click', () => {
                let w = container.offsetWidth + STEP;
                container.style.width = Math.max(MIN_W, Math.min(w, MAX_W)) + 'px';
            });
            resizeMinusBtn.addEventListener('click', () => {
                let w = container.offsetWidth - STEP;
                container.style.width = Math.max(MIN_W, Math.min(w, MAX_W)) + 'px';
            });
        }
        updateCardPrice();
    }

    function addProductType() {
      const grid = document.getElementById('product-type-grid');
      const tpl = grid.querySelector('.product-type-wrapper');
      const clone = tpl.cloneNode(true);

      clone.querySelectorAll('input[type=text], select').forEach(el => {
        if (el.tagName === 'SELECT') { el.selectedIndex = 0; } 
        else { el.value = ''; }
      });
      clone.querySelector('.card-total').textContent = formatCurrency(0);
      clone.querySelector('.delete-btn').classList.add('show');
      grid.insertBefore(clone, document.getElementById('plus-btn-wrapper'));
      bindCardLogic(clone);
      adjustDrawingSize();
      generateFenceImages();
      updateSecondPageSummary();
    }

    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.product-type-wrapper').forEach(bindCardLogic);
        generateFenceImages();
        setTimeout(() => {
          updateSecondPageSummary();
        }, 500);
        const addBtn = document.getElementById('add-card-btn');
        if (addBtn) {
          addBtn.addEventListener('click', addProductType);
        }
        setTimeout(() => {
            initializeDrawing();
        }, 100);
    });

    if ('serviceWorker' in navigator && window.location.protocol === 'https:') {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('sw.js')
          .then((registration) => {
          })
          .catch((registrationError) => {
          });
      });
    }

    let deferredPrompt;
    window.addEventListener('beforeinstallprompt', (e) => {
      e.preventDefault();
      deferredPrompt = e;
    });

    function syncInfoFields() {
      const fields = [
        'FirstName', 'LastName', 'Street', 'State', 'ZipCode', 'Email', 'Phone', 'job-address', 'site-contact', 'estimate-attendance'
      ];
      fields.forEach(id => {
        const input = document.getElementById(id);
        const span = document.getElementById(id + '-span');
        if (input && span) {
          span.textContent = input.value;
        }
      });
      generateFenceImages();
      updateSecondPageSummary();
    }
    
    window.addEventListener('beforeprint', function() {
      updateSecondPageSummary();
    });
    
    function generateFenceImages() {
      const displayContainer = document.getElementById('fence-images-display');
      if (!displayContainer) return;
      
      displayContainer.innerHTML = '';
      
      document.querySelectorAll('.product-type-wrapper').forEach(wrapper => {
        const materialSelect = wrapper.querySelector('.fence-material-select');
        const styleSelect = wrapper.querySelector('.fence-style-select');
        const inputRows = wrapper.querySelectorAll('.input-row');
        const linearFootageInput = inputRows.length > 0 ? inputRows[0].querySelector('input') : null;
        
        if (materialSelect && styleSelect && materialSelect.value !== '0' && styleSelect.value !== '0' && linearFootageInput && linearFootageInput.value.trim() !== '') {
          const material = materialSelect.value;
          const style = styleSelect.value;
          const linearFootage = linearFootageInput ? linearFootageInput.value : '';
          
          const imageItem = document.createElement('div');
          imageItem.className = 'fence-image-item';
          
          const img = document.createElement('img');
          img.src = getFenceImageSrc(material, style);
          img.alt = `${material} ${style} fence`;
          img.onerror = function() {
            this.style.display = 'none';
          };
          
          const details = document.createElement('div');
          details.className = 'fence-details';
          details.innerHTML = `
            <div><strong>Material:</strong> ${material.charAt(0).toUpperCase() + material.slice(1)}</div>
            <div><strong>Style:</strong> ${styleSelect.options[styleSelect.selectedIndex].text}</div>
            <div><strong>Linear Footage:</strong> ${linearFootage}</div>
          `;
          
          imageItem.appendChild(img);
          imageItem.appendChild(details);
          displayContainer.appendChild(imageItem);
        }
      });
    }
    
    let isDrawing = false;
    let currentTool = 'pen';
    let currentColor = '#000000';
    let currentLineWidth = 2;
    let startX, startY;
    let previewCanvas, previewCtx;
   
   function updatePreviewPosition() {
     if (!previewCanvas) return;
     const canvas = document.getElementById('first-page-drawing-canvas');
     if (!canvas) return;
     
     const rect = canvas.getBoundingClientRect();
     previewCanvas.style.position = 'absolute';
     previewCanvas.style.top = (rect.top + window.scrollY) + 'px';
     previewCanvas.style.left = (rect.left + window.scrollX) + 'px';
     previewCanvas.style.width = canvas.offsetWidth + 'px';
     previewCanvas.style.height = canvas.offsetHeight + 'px';
     previewCanvas.width = canvas.width;
     previewCanvas.height = canvas.height;
   }
    
    function initializeCanvas(canvasId) {
      const canvas = document.getElementById(canvasId);
     if (!canvas) return;
      const ctx = canvas.getContext('2d');
      
      if (canvasId === 'first-page-drawing-canvas') {
        previewCanvas = document.createElement('canvas');
        previewCanvas.style.pointerEvents = 'none';
        previewCanvas.style.zIndex = '9999';
        previewCanvas.style.background = 'transparent';
        previewCanvas.style.border = 'none';
        document.body.appendChild(previewCanvas);
        previewCtx = previewCanvas.getContext('2d');
        
        const updatePreviewSize = () => {
          const rect = canvas.getBoundingClientRect();
          previewCanvas.width = canvas.width;
          previewCanvas.height = canvas.height;
          previewCanvas.style.top = rect.top + window.scrollY + 'px';
          previewCanvas.style.left = rect.left + window.scrollX + 'px';
          previewCanvas.style.width = canvas.offsetWidth + 'px';
          previewCanvas.style.height = canvas.offsetHeight + 'px';
        };
        
        updatePreviewSize();
        window.addEventListener('resize', updatePreviewSize);
        window.addEventListener('scroll', updatePreviewSize);
        
        previewCtx = previewCanvas.getContext('2d');
      }
      
      canvas.addEventListener('mousedown', onStart);
      canvas.addEventListener('mousemove', onMove);
      canvas.addEventListener('mouseup', onEnd);
      canvas.addEventListener('mouseout', onEnd);
      
      canvas.addEventListener('touchstart', onTouchStart, { passive: false });
      canvas.addEventListener('touchmove', onTouchMove, { passive: false });
      canvas.addEventListener('touchend', onTouchEnd, { passive: false });
      canvas.addEventListener('touchcancel', onTouchEnd, { passive: false });
      
      canvas.addEventListener('click', handleCanvasClick);
      canvas.addEventListener('touchend', handleCanvasTouch, { passive: false });
        
        function handleCanvasClick(e) {
            if (canvasId === 'first-page-drawing-canvas' && currentTool === 'text') {
                const rect = canvas.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                addTextInput(canvas, x, y);
            }
        }
    }
    
    function onStart(e) {
      const canvas = e.target;
      const rect = canvas.getBoundingClientRect();
      const ctx = canvas.getContext('2d');
      const canvasId = canvas.id;
      
      if (canvasId !== 'signature-below-total-canvas' && currentTool === 'text') {
        return;
      }
      
      isDrawing = true;
      startX = e.clientX - rect.left;
      startY = e.clientY - rect.top;
      
      const activeTool = canvasId === 'signature-below-total-canvas' ? 'pen' : currentTool;
      
      if (canvasId === 'signature-below-total-canvas' || activeTool === 'pen' || activeTool === 'eraser') {
        ctx.beginPath();
        ctx.moveTo(startX, startY);
      }
    }
    
    function onMove(e) {
      const canvas = e.target;
      const rect = canvas.getBoundingClientRect();
      const ctx = canvas.getContext('2d');
      const canvasId = canvas.id;
      
      const currentX = e.clientX - rect.left;
      const currentY = e.clientY - rect.top;
      
      if (!isDrawing) return;
      
      if (canvasId !== 'signature-below-total-canvas' && currentTool === 'text') {
        return;
      }
      
      const activeTool = canvasId === 'signature-below-total-canvas' ? 'pen' : currentTool;
      const activeColor = canvasId === 'signature-below-total-canvas' ? '#000000' : currentColor;
      
      ctx.lineWidth = currentLineWidth;
      ctx.lineCap = 'round';
      ctx.strokeStyle = activeTool === 'eraser' ? '#ffffff' : activeColor;
      
      if (canvasId === 'signature-below-total-canvas' || activeTool === 'pen' || activeTool === 'eraser') {
        ctx.lineTo(currentX, currentY);
        ctx.stroke();
        ctx.beginPath();
        ctx.moveTo(currentX, currentY);
      } else if ((activeTool === 'line' || activeTool === 'rectangle') && canvasId !== 'signature-below-total-canvas') {
        if (canvasId === 'first-page-drawing-canvas' && previewCtx && previewCanvas) {
          previewCtx.clearRect(0, 0, previewCanvas.width, previewCanvas.height);
          previewCtx.lineWidth = currentLineWidth;
          previewCtx.strokeStyle = activeColor;
          previewCtx.lineCap = 'round';
          previewCtx.globalAlpha = 0.8;
          if (activeTool === 'line') {
            previewCtx.beginPath();
            previewCtx.moveTo(startX, startY);
            previewCtx.lineTo(currentX, currentY);
            previewCtx.stroke();
          } else if (activeTool === 'rectangle') {
            previewCtx.beginPath();
            previewCtx.rect(startX, startY, currentX - startX, currentY - startY);
            previewCtx.stroke();
          }
          previewCtx.globalAlpha = 1.0;
        }
      }
    }
    
    function onEnd(e) {
      const canvas = e.target;
      const ctx = canvas.getContext('2d');
      const canvasId = canvas.id;
      
      if (!isDrawing) return;
      isDrawing = false;
      
      if (canvasId !== 'signature-below-total-canvas' && currentTool === 'text') {
        return;
      }
      
      const activeTool = canvasId === 'signature-below-total-canvas' ? 'pen' : currentTool;
      const activeColor = canvasId === 'signature-below-total-canvas' ? '#000000' : currentColor;
      
      if (previewCtx && previewCanvas && canvasId === 'first-page-drawing-canvas') {
        previewCtx.clearRect(0, 0, previewCanvas.width, previewCanvas.height);
      }
      
      if ((activeTool === 'line' || activeTool === 'rectangle') && canvasId !== 'signature-below-total-canvas') {
        const rect = canvas.getBoundingClientRect();
        const endX = e.clientX - rect.left;
        const endY = e.clientY - rect.top;
        
        ctx.lineWidth = currentLineWidth;
        ctx.strokeStyle = activeColor;
        ctx.lineCap = 'round';
        
        if (activeTool === 'line') {
          ctx.beginPath();
          ctx.moveTo(startX, startY);
          ctx.lineTo(endX, endY);
          ctx.stroke();
        } else if (activeTool === 'rectangle') {
          ctx.beginPath();
          ctx.rect(startX, startY, endX - startX, endY - startY);
          ctx.stroke();
        }
      }
      
      ctx.beginPath();
      if (canvasId === 'first-page-drawing-canvas') {
        saveCanvasState(canvasId);
      }
    }
    
    function onTouchStart(e) {
      e.preventDefault();
      if (e.touches.length > 0) {
        const canvas = e.target;
        const touch = e.touches[0];
        const ctx = canvas.getContext('2d');
        const canvasId = canvas.id;
        const rect = canvas.getBoundingClientRect();
        const scaleX = canvas.width / rect.width;
        const scaleY = canvas.height / rect.height;
        let x = (touch.clientX - rect.left) * scaleX;
        let y = (touch.clientY - rect.top) * scaleY;
        if (canvasId !== 'signature-below-total-canvas' && currentTool === 'text') {
          return;
        }
        isDrawing = true;
        startX = x;
        startY = y;
        const activeTool = canvasId === 'signature-below-total-canvas' ? 'pen' : currentTool;
        if (canvasId === 'signature-below-total-canvas' || activeTool === 'pen' || activeTool === 'eraser') {
          ctx.beginPath();
          ctx.moveTo(startX, startY);
        }
      }
    }
    
    function onTouchMove(e) {
      e.preventDefault();
      if (e.touches.length > 0) {
        const canvas = e.target;
        const touch = e.touches[0];
        const ctx = canvas.getContext('2d');
        const canvasId = canvas.id;
        const rect = canvas.getBoundingClientRect();
        const scaleX = canvas.width / rect.width;
        const scaleY = canvas.height / rect.height;
        let x = (touch.clientX - rect.left) * scaleX;
        let y = (touch.clientY - rect.top) * scaleY;
        if (!isDrawing) return;
        if (canvasId !== 'signature-below-total-canvas' && currentTool === 'text') {
          return;
        }
        const activeTool = canvasId === 'signature-below-total-canvas' ? 'pen' : currentTool;
        const activeColor = canvasId === 'signature-below-total-canvas' ? '#000000' : currentColor;
        ctx.lineWidth = currentLineWidth;
        ctx.lineCap = 'round';
        ctx.strokeStyle = activeTool === 'eraser' ? '#ffffff' : activeColor;
        if (canvasId === 'signature-below-total-canvas' || activeTool === 'pen' || activeTool === 'eraser') {
          ctx.lineTo(x, y);
          ctx.stroke();
          ctx.beginPath();
          ctx.moveTo(x, y);
        } else if ((activeTool === 'line' || activeTool === 'rectangle') && canvasId !== 'signature-below-total-canvas') {
          if (canvasId === 'first-page-drawing-canvas' && previewCtx && previewCanvas) {
            previewCtx.clearRect(0, 0, previewCanvas.width, previewCanvas.height);
            previewCtx.lineWidth = currentLineWidth;
            previewCtx.strokeStyle = activeColor;
            previewCtx.lineCap = 'round';
            previewCtx.globalAlpha = 0.8;
            if (activeTool === 'line') {
              previewCtx.beginPath();
              previewCtx.moveTo(startX, startY);
              previewCtx.lineTo(x, y);
              previewCtx.stroke();
            } else if (activeTool === 'rectangle') {
              previewCtx.beginPath();
              previewCtx.rect(startX, startY, x - startX, y - startY);
              previewCtx.stroke();
            }
            previewCtx.globalAlpha = 1.0;
          }
        }
      }
    }
    
    function onTouchEnd(e) {
      e.preventDefault();
      if (e.changedTouches.length > 0) {
        const canvas = e.target;
        const touch = e.changedTouches[0];
        const ctx = canvas.getContext('2d');
        const canvasId = canvas.id;
        const rect = canvas.getBoundingClientRect();
        const scaleX = canvas.width / rect.width;
        const scaleY = canvas.height / rect.height;
        let x = (touch.clientX - rect.left) * scaleX;
        let y = (touch.clientY - rect.top) * scaleY;
        if (!isDrawing) return;
        isDrawing = false;
        if (canvasId !== 'signature-below-total-canvas' && currentTool === 'text') {
          return;
        }
        const activeTool = canvasId === 'signature-below-total-canvas' ? 'pen' : currentTool;
        const activeColor = canvasId === 'signature-below-total-canvas' ? '#000000' : currentColor;
        if (previewCtx && previewCanvas && canvasId === 'first-page-drawing-canvas') {
          previewCtx.clearRect(0, 0, previewCanvas.width, previewCanvas.height);
        }
        if ((activeTool === 'line' || activeTool === 'rectangle') && canvasId !== 'signature-below-total-canvas') {
          ctx.lineWidth = currentLineWidth;
          ctx.strokeStyle = activeColor;
          ctx.lineCap = 'round';
          if (activeTool === 'line') {
            ctx.beginPath();
            ctx.moveTo(startX, startY);
            ctx.lineTo(x, y);
            ctx.stroke();
          } else if (activeTool === 'rectangle') {
            ctx.beginPath();
            ctx.rect(startX, startY, x - startX, y - startY);
            ctx.stroke();
          }
        }
        ctx.beginPath();
        if (canvasId === 'first-page-drawing-canvas') {
          saveCanvasState(canvasId);
        }
      }
    }
    
    function handleCanvasTouch(e) {
      if (e.target.id === 'first-page-drawing-canvas' && currentTool === 'text') {
        e.preventDefault();
        const touch = e.changedTouches[0];
        const rect = e.target.getBoundingClientRect();
        const x = touch.clientX - rect.left;
        const y = touch.clientY - rect.top;
        addTextInput(e.target, x, y);
      }
    }
    
    function addTextInput(canvas, x, y) {
        const container = canvas.parentElement;
        const textInput = document.createElement('textarea');
        textInput.className = 'text-input';
        textInput.style.left = x + 'px';
        textInput.style.top = y + 'px';
        textInput.style.color = currentColor;
        textInput.placeholder = 'Type text here...';
        textInput.rows = 1;
        container.appendChild(textInput);
        textInput.focus();
        textInput.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = this.scrollHeight + 'px';
        });
        function finalizeText() {
            if (textInput.value.trim()) {
                const ctx = canvas.getContext('2d');
                ctx.font = '16px Arial';
                ctx.fillStyle = currentColor;
                ctx.textBaseline = 'top';
                const lines = textInput.value.split('\n');
                lines.forEach((line, index) => {
                    ctx.fillText(line, x, y + (index * 20));
                });
            }
            container.removeChild(textInput);
        }
        textInput.addEventListener('blur', finalizeText);
        textInput.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                container.removeChild(textInput);
            } else if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                finalizeText();
            }
        });
    }
    
    function setDrawingTool(tool) {
      currentTool = tool;
    }
    
    function setDrawingColor(color) {
      currentColor = color;
    }
    
    let canvasHistory = [];
    let currentHistoryIndex = -1;
    const maxHistorySize = 20;
    
    function saveCanvasState(canvasId) {
      const canvas = document.getElementById(canvasId);
      if (!canvas) return;
      const ctx = canvas.getContext('2d');
      const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
      canvasHistory = canvasHistory.slice(0, currentHistoryIndex + 1);
      canvasHistory.push(imageData);
      currentHistoryIndex++;
      if (canvasHistory.length > maxHistorySize) {
        canvasHistory.shift();
        currentHistoryIndex--;
      }
    }
    
    function undoLastAction() {
      if (currentHistoryIndex > 0) {
        currentHistoryIndex--;
        const canvas = document.getElementById('first-page-drawing-canvas');
        const ctx = canvas.getContext('2d');
        ctx.putImageData(canvasHistory[currentHistoryIndex], 0, 0);
      } else if (currentHistoryIndex === 0) {
        clearCanvas('first-page-drawing-canvas');
        currentHistoryIndex = -1;
        canvasHistory = [];
      }
    }
    
    function clearCanvas(canvasId) {
      const canvas = document.getElementById(canvasId);
      const ctx = canvas.getContext('2d');
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      if (canvasId === 'first-page-drawing-canvas') {
        saveCanvasState(canvasId);
      }
    }
    
    window.addEventListener('beforeprint', syncInfoFields);
    document.querySelectorAll('input[type="text"]').forEach(inp => {
      inp.addEventListener('input', syncInfoFields);
    });
    
    function initializeDrawing() {
      initializeCanvas('first-page-drawing-canvas');
      initializeCanvas('signature-below-total-canvas');
      generateFenceImages();
      adjustDrawingSize();
      saveCanvasState('first-page-drawing-canvas');
    }
    
    function adjustDrawingSize() {
      const canvas = document.getElementById('first-page-drawing-canvas');
      if (!canvas) return;
      const fenceCount = document.querySelectorAll('.product-type-wrapper').length;
      let height;
      if (fenceCount <= 1) {
         height = 300;
      } else {
         height = 250;
      }
      const ctx = canvas.getContext('2d');
      const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
      updatePreviewPosition();
      canvas.height = height;
      ctx.putImageData(imageData, 0, 0);
      window.addEventListener('resize', updatePreviewPosition);
      window.addEventListener('scroll', updatePreviewPosition);
    }
    
    function updateSecondPageSummary() {
       const summaryTableBody = document.getElementById('summary-table-body');
       const summaryGrandTotal = document.getElementById('summary-grand-total');
       if (!summaryTableBody) {
         return;
       }
       summaryTableBody.innerHTML = '';
       const productCards = document.querySelectorAll('.product-type-wrapper');
       let grandTotal = 0;
       const productMap = new Map();
       productCards.forEach((card) => {
         const selects = card.querySelectorAll('select');
         const materialSelect = card.querySelector('.fence-material-select');
         const styleSelect = card.querySelector('.fence-style-select');
         const heightSelect = selects[1];
         const linearFootageInput = card.querySelector('input[placeholder="Write Here"]');
         const cardTotal = card.querySelector('.card-total');
         if (materialSelect && styleSelect && heightSelect) {
           const material = materialSelect.value !== '0' ? materialSelect.value : '';
           const style = styleSelect.value !== '0' ? styleSelect.options[styleSelect.selectedIndex].text : '';
           const height = heightSelect.value !== '0' ? heightSelect.options[heightSelect.selectedIndex].text : '';
           const linearFootage = linearFootageInput ? linearFootageInput.value : '';
           const unitPrice = cardTotal ? parseFloat(cardTotal.textContent.replace('$', '').replace(',', '')) : 0;
           const productKey = `${material}-${style}-${height}-${linearFootage}`;
           if (productMap.has(productKey)) {
             const existingProduct = productMap.get(productKey);
             existingProduct.quantity += 1;
             existingProduct.totalAmount = existingProduct.unitPrice * existingProduct.quantity;
           } else {
             productMap.set(productKey, {
               material: material ? material.charAt(0).toUpperCase() + material.slice(1) : '',
               style: style || '',
               height: height || '',
               linearFootage: linearFootage || '',
               unitPrice: unitPrice,
               quantity: 1,
               totalAmount: unitPrice
             });
           }
         }
       });
       productMap.forEach((product) => {
         const row = document.createElement('tr');
         row.innerHTML = `
           <td class="qty">${product.quantity}</td>
           <td>${product.material}</td>
           <td>${product.style}</td>
           <td>${product.height}</td>
           <td>${product.linearFootage}</td>
           <td class="price">$${product.unitPrice.toFixed(2)}</td>
           <td class="amount">$${product.totalAmount.toFixed(2)}</td>
         `;
         summaryTableBody.appendChild(row);
         grandTotal += product.totalAmount;
       });
       if (summaryGrandTotal) {
         summaryGrandTotal.textContent = `$${grandTotal.toFixed(2)}`;
       }
     }
  </script>
</head>
