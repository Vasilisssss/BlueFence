  <div class="container customer-info-container">
    <h2>Customer & Project Information</h2>
    <div class="info-grid">
      <div><label>First Name:</label><input type="text" id="FirstName" /><span id="FirstName-span"></span></div>
      <div><label>Last Name:</label><input type="text" id="LastName" /><span id="LastName-span"></span></div>
      <div><label>Street:</label><input type="text" id="Street" /><span id="Street-span"></span></div>
      <div><label>State:</label><input type="text" id="State" /><span id="State-span"></span></div>
      <div><label>Zip Code:</label><input type="text" id="ZipCode" /><span id="ZipCode-span"></span></div>
      <div><label>Email:</label><input type="text" id="Email" /><span id="Email-span"></span></div>
