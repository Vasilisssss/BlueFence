  <!-- include html2pdf.js at end so Save to PDF works -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js" integrity="sha512-YcsIPb5eKp3WfM1y6kFdb+q3sFhYmfNP0k5JfZPqfIi6u/6SvaQYH2fCwX7K+2Qa4yyivQZ6pHWx3GVnYwX0A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script>
    document.getElementById('save-pdf-btn').addEventListener('click', () => {
      // Update summary before capture if needed (mirrors beforeprint behavior)
      if (typeof updateSecondPageSummary === 'function') {
        updateSecondPageSummary();
      }
      // Configure to match visual size; use A4 portrait with minimal margins
      const opt = {
        margin: [10, 10, 10, 10],
        filename: 'quote.pdf',
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: {
          scale: 2, // higher DPI for clarity
          useCORS: true,
          allowTaint: true
        },
        jsPDF: { unit: 'pt', format: 'a4', orientation: 'portrait' }
      };
      // Target the full body for export
      html2pdf().set(opt).from(document.body).toPdf().get('pdf').then(function (pdf) {
        // Optionally you could add metadata here
      }).save();
    });
  </script>
